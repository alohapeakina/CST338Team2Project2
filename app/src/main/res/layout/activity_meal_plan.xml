<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:padding="16dp"
  tools:context=".activity.MealPlanActivity">

  <!-- Title -->

  <!-- Day Selection -->

  <TextView
    android:id="@+id/mealPlanTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="@string/meal_planner"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <GridLayout
    android:id="@+id/nutritionGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true"
    android:background="@drawable/item_background"
    android:backgroundTint="@color/dustyblue"
    app:layout_constraintTop_toBottomOf="@id/mealPlanTitle"
    android:padding="8dp">

    <TextView
      android:id="@+id/caloriesTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:text="@string/calories_0"
      android:textStyle="bold"
      android:textSize="16sp" />

    <TextView
      android:id="@+id/proteinTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:text="@string/protein_0g"
      android:textStyle="bold"
      android:textSize="16sp" />

    <TextView
      android:id="@+id/fatTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:text="@string/fat_0g"
      android:textStyle="bold"
      android:textSize="16sp" />

    <TextView
      android:id="@+id/carbsTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_columnWeight="1"
      android:text="@string/carbs_0g"
      android:textStyle="bold"
      android:textSize="16sp" />
  </GridLayout>

  <TextView
    android:id="@+id/dayLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/select_day"
    android:textSize="16sp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="10dp"
    app:layout_constraintTop_toBottomOf="@id/nutritionGrid"
    app:layout_constraintStart_toStartOf="parent" />

  <Spinner
    android:id="@+id/daySpinner"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/dayLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <!-- Recipe Selection -->
  <TextView
    android:id="@+id/recipeLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/select_recipe"
    android:textSize="16sp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="10dp"
    app:layout_constraintTop_toBottomOf="@id/daySpinner"
    app:layout_constraintStart_toStartOf="parent" />

  <Spinner
    android:id="@+id/recipeSpinner"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/recipeLabel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <!-- Add Meal Button -->
  <Button
      android:id="@+id/addMealButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:backgroundTint="@color/oceanblue"
      android:text="@string/add_meal_to_plan"
      android:textColor="#212121"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/recipeSpinner" />

  <!-- Current Meal Plan Label -->
  <TextView
    android:id="@+id/currentPlanLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/current_meal_plan"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="24dp"
    android:layout_marginStart="10dp"
    app:layout_constraintTop_toBottomOf="@id/addMealButton"
    app:layout_constraintStart_toStartOf="parent" />

  <!-- Meal Plan ListView -->

  <!-- View Weekly Plan Button -->
  <ListView
    android:id="@+id/mealPlanListView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:divider="@android:color/darker_gray"
    android:dividerHeight="1dp"
    app:layout_constraintBottom_toTopOf="@id/viewWeeklyPlanButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/currentPlanLabel"
    app:layout_constraintVertical_bias="0.0" />
  <Button
    android:id="@+id/viewWeeklyPlanButton"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="@string/refresh_meal_plan"
    android:textSize="16sp"
    android:backgroundTint="@color/oceanblue"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>